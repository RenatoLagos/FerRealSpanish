---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "FerRealSpanish - Learn Spanish Online",
	description = "Learn Spanish efficiently with our personalized classes and experienced teachers."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://api.fontshare.com/v2/css?f[]=satoshi@400,500,700,800,900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col font-nunito">
		<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--background-primary)]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16 items-center">
					<div class="flex items-center gap-2">
						<a href="/" class="flex items-center">
							<span class="text-2xl font-black">Fer<span class="text-[var(--background-secondary)]">Real</span>Spanish </span>
							<img src="/loro.PNG" alt="Loro" class="ml-2 w-10 h-10">
						</a>
					</div>
					<nav class="hidden md:flex space-x-8">
						<a href="/" class="hover:text-[var(--button-primary)] text-xl font-black">Home</a>
						<a href="/classes" class="hover:text-[var(--button-primary)] text-xl font-black">Schedule</a>
						<a href="/about" class="hover:text-[var(--button-primary)] text-xl font-black">About</a>
						<a href="/contact" class="hover:text-[var(--button-primary)] text-xl font-black">Contact</a>
					</nav>
					<button class="md:hidden p-2 rounded-md hover:text-[var(--button-primary)]">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
						</svg>
					</button>
				</div>
			</div>
		</header>

		<div class="h-16"></div>

		<main class="flex-grow bg-[var(--background-primary)]">
			<slot />
		</main>

		<footer class="bg-[var(--footer-background)] text-white">
			<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4">FerRealSpanish</h3>
						<p class="text-white/80">Learn Spanish efficiently with our personalized classes and experienced teachers.</p>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="/classes" class="text-white/80 hover:text-[var(--button-secondary)]">Classes</a></li>
							<li><a href="/resources" class="text-white/80 hover:text-[var(--button-secondary)]">Resources</a></li>
							<li><a href="/blog" class="text-white/80 hover:text-[var(--button-secondary)]">Blog</a></li>
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Support</h4>
						<ul class="space-y-2">
							<li><a href="/faq" class="text-white/80 hover:text-[var(--button-secondary)]">FAQ</a></li>
							<li><a href="/contact" class="text-white/80 hover:text-[var(--button-secondary)]">Contact Us</a></li>
							<li><a href="/policy" class="text-white/80 hover:text-[var(--button-secondary)]">Privacy Policy</a></li>
						</ul>
					</div>
					<div>
						<h4 class="text-lg font-semibold mb-4">Connect</h4>
						<div class="flex space-x-4">
							<a href="#" class="text-white/80 hover:text-[var(--button-secondary)]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
									<path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
								</svg>
							</a>
							<a href="#" class="text-white/80 hover:text-[var(--button-secondary)]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
									<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.04 10.04 0 01-3.127 1.195 4.92 4.92 0 00-8.384 4.482 13.95 13.95 0 01-10.13-5.14 4.92 4.92 0 001.524 6.574 4.9 4.9 0 01-2.23-.616v.06a4.92 4.92 0 003.95 4.829 4.9 4.9 0 01-2.224.084 4.92 4.92 0 004.6 3.42 9.86 9.86 0 01-7.29 2.04 13.9 13.9 0 007.5 2.2c9.01 0 13.97-7.5 13.97-14.01 0-.21 0-.42-.01-.63a10.06 10.06 0 002.47-2.57z"/>
								</svg>
							</a>
							<a href="#" class="text-white/80 hover:text-[var(--button-secondary)]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-white/10 text-white/60 text-center">
					<p>&copy; {new Date().getFullYear()} FerRealSpanish. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	body {
		background-color: var(--background-primary);
	}
</style>
