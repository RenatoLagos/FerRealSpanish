---
import '../styles/global.css';

import { ClientRouter } from 'astro:transitions';

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	image?: string;
	type?: string;
	canonical?: string;
}

const { 
	title = "FerRealSpanish - Learn Spanish Online with Native Teacher",
	description = "Learn Spanish efficiently with personalized online classes from experienced native teacher Fernanda. Individual lessons, flexible schedules, and real conversation practice.",
	keywords = "learn spanish online, spanish classes, native spanish teacher, spanish lessons, online spanish tutor, spanish conversation, fernanda spanish teacher",
	image = "/full_program.jpg",
	type = "website",
	canonical = Astro.url.href
} = Astro.props;

// Construir la URL completa de la imagen
const imageUrl = new URL(image, Astro.site || 'https://ferrealspanish.com').href;
---

<!doctype html>
<html lang="en">
	<head>
		<ClientRouter />
		<!-- Google -->
		<meta name="google-site-verification" content="yxLn7_ycWwd7BWeySgbgxJWThh-9D8xnyqTPbH_Ug7M" />

		<!-- Bing -->
		<meta name="msvalidate.01" content="866CA5384F8C4B6E3BF5B36EA878B35A" />
		
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="Fernanda Pacheco - FerRealSpanish" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href={canonical} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonical} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={imageUrl} />
		<meta property="og:image:alt" content="FerRealSpanish - Learn Spanish Online" />
		<meta property="og:site_name" content="FerRealSpanish" />
		<meta property="og:locale" content="en_US" />
		<meta property="og:locale:alternate" content="es_ES" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonical} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={imageUrl} />
		<meta name="twitter:creator" content="@ferrealspanish" />
		
		<!-- Favicons -->
		<link rel="icon" type="image/png" href="/loro.PNG">
		<link rel="shortcut icon" href="/loro.PNG" type="image/png">
		<link rel="apple-touch-icon" href="/loro.PNG">
		
		<!-- Fonts -->
		<link href="https://api.fontshare.com/v2/css?f[]=satoshi@400,500,700,800,900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		
		<!-- Structured Data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "EducationalOrganization",
			"name": "FerRealSpanish",
			"url": "https://ferrealspanish.com",
			"logo": "https://ferrealspanish.com/loro.PNG",
			"description": "Learn Spanish online with personalized classes from experienced native teacher Fernanda",
			"address": {
				"@type": "PostalAddress",
				"addressCountry": "Online"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"contactType": "Customer Service",
				"availableLanguage": ["English", "Spanish"]
			},
			"sameAs": [
				"https://www.facebook.com/fernanda.pacheco.bergereault",
				"https://www.instagram.com/ferrealspanish/"
			],
			"founder": {
				"@type": "Person",
				"name": "Fernanda Pacheco",
				"jobTitle": "Spanish Teacher",
				"url": "https://ferrealspanish.com/about"
			},
			"offers": {
				"@type": "Offer",
				"name": "Spanish Online Classes",
				"description": "Personalized Spanish lessons with native teacher",
				"category": "Education"
			}
		}
		</script>
		
		<slot name="head" />
	</head>
	<body class="min-h-screen flex flex-col font-nunito">
		<header class="fixed top-0 left-0 right-0 z-50 bg-[var(--background-primary)]">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16 items-center">
					<div class="flex items-center gap-2">
						<a href="/" class="flex items-center">
							<span class="text-2xl font-black">FerReal<span class="text-[var(--background-secondary)]">Spanish</span></span>
							<img src="/loro.PNG" alt="Loro" class="ml-2 w-10 h-10">
						</a>
					</div>
					<nav class="hidden md:flex space-x-8">
						<a href="/" class="hover:text-[var(--button-primary)] text-xl font-black">Home</a>
						<a href="/about" class="hover:text-[var(--button-primary)] text-xl font-black">About</a>
						<a href="/schedule-class" class="hover:text-[var(--button-primary)] text-xl font-black">Schedule</a>
						<a href="/contact" class="hover:text-[var(--button-primary)] text-xl font-black">Contact</a>
					</nav>
					<button id="mobile-menu-button" class="md:hidden p-2 rounded-md hover:text-[var(--button-primary)]">
						<svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
							<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
						</svg>
						<svg id="close-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hidden">
							<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
						</svg>
					</button>
				</div>
			</div>
			
			<!-- Menú móvil -->
			<div id="mobile-menu" class="md:hidden hidden">
				<div class="px-4 pt-2 pb-3 space-y-1 bg-[var(--background-primary)] border-t border-gray-200">
					<a href="/" class="block px-3 py-2 text-xl font-black hover:text-[var(--button-primary)] hover:bg-gray-50 rounded-md">Home</a>
					<a href="/about" class="block px-3 py-2 text-xl font-black hover:text-[var(--button-primary)] hover:bg-gray-50 rounded-md">About</a>
					<a href="/schedule-class" class="block px-3 py-2 text-xl font-black hover:text-[var(--button-primary)] hover:bg-gray-50 rounded-md">Schedule</a>
					<a href="/contact" class="block px-3 py-2 text-xl font-black hover:text-[var(--button-primary)] hover:bg-gray-50 rounded-md">Contact</a>
				</div>
			</div>
		</header>

		<div class="h-16"></div>

		<main class="flex-grow bg-[var(--background-primary)]">
			<slot />
		</main>

		<footer class="bg-[var(--footer-background)] text-white">
			<div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
				<div class="flex flex-col md:flex-row justify-between items-center md:items-start gap-8">
					<!-- FerRealSpanish - Izquierda -->
					<div class="text-center md:text-left">
						<h3 class="text-xl font-bold mb-4">FerRealSpanish</h3>
						<p class="text-white/80">Learn Spanish efficiently with our personalized classes and experienced teachers.</p>
					</div>
					
					<!-- Connect - Derecha -->
					<div class="text-center md:text-right">
						<h4 class="text-lg font-semibold mb-4">Connect</h4>
						<div class="flex justify-center md:justify-end space-x-4">
							<a href="https://www.facebook.com/fernanda.pacheco.bergereault" target="_blank" rel="noopener noreferrer" class="text-white/80 hover:text-[var(--button-secondary)]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
									<path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
								</svg>
							</a>
							<a href="https://www.instagram.com/ferrealspanish/" target="_blank" rel="noopener noreferrer" class="text-white/80 hover:text-[var(--button-secondary)]">
								<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-6 h-6">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
								</svg>
							</a>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-white/10 text-white/60 text-center">
					<p>&copy; {new Date().getFullYear()} FerRealSpanish. All rights reserved.</p>
				</div>
			</div>
		</footer>
		<script>
			// Script para manejar navegación inteligente a la sección de contacto
			document.addEventListener('DOMContentLoaded', () => {
				const contactLinks = document.querySelectorAll('a[href="/#contact-section"]');
				
				// Función para abrir el formulario de contacto
				function openContactForm() {
					setTimeout(() => {
						const formContainer = document.getElementById('contactForm');
						const toggleBtn = document.getElementById('toggleForm');
						const arrow = document.getElementById('formArrow');
						
						// Si el formulario existe y está oculto, abrirlo
						if (formContainer && formContainer.classList.contains('hidden')) {
							formContainer.classList.remove('hidden');
							if (arrow) {
								arrow.classList.add('rotate-180');
							}
						}
					}, 300); // Delay para permitir que el scroll termine
				}
				
				contactLinks.forEach(link => {
					link.addEventListener('click', (e) => {
						// Si estamos en la página principal, hacer scroll suave
						if (window.location.pathname === '/') {
							e.preventDefault();
							const contactSection = document.getElementById('contact-section');
							if (contactSection) {
								contactSection.scrollIntoView({ 
									behavior: 'smooth',
									block: 'start'
								});
								// Abrir el formulario después del scroll
								openContactForm();
							}
						}
						// Si estamos en otra página, el enlace funcionará normalmente
						// llevándonos a /#contact-section y el código de abajo manejará el formulario
					});
				});
				
				// Si llegamos a la página con #contact-section en la URL, hacer scroll y abrir formulario
				if (window.location.hash === '#contact-section') {
					setTimeout(() => {
						const contactSection = document.getElementById('contact-section');
						if (contactSection) {
							contactSection.scrollIntoView({ 
								behavior: 'smooth',
								block: 'start'
							});
							// Abrir el formulario después del scroll
							openContactForm();
						}
					}, 100); // Pequeño delay para asegurar que la página esté cargada
				}
				
				// Script para manejar el menú móvil
				const mobileMenuButton = document.getElementById('mobile-menu-button');
				const mobileMenu = document.getElementById('mobile-menu');
				const hamburgerIcon = document.getElementById('hamburger-icon');
				const closeIcon = document.getElementById('close-icon');
				
				if (mobileMenuButton && mobileMenu) {
					mobileMenuButton.addEventListener('click', () => {
						mobileMenu.classList.toggle('hidden');
						if (hamburgerIcon) hamburgerIcon.classList.toggle('hidden');
						if (closeIcon) closeIcon.classList.toggle('hidden');
					});
				}
			});
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overflow-x: hidden; /* Previene desbordamiento horizontal */
	}
	
	html {
		scroll-behavior: smooth;
		scroll-padding-top: 4rem; /* Ajuste para el header fijo */
	}
	
	body {
		background-color: var(--background-primary);
	}
</style>
