---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/button.astro';
---

<Layout title="About Me - FerRealSpanish">
<!-- Minimalist About Section -->
<section id="about-section" class="py-32 pt-32 bg-[var(--background-primary)]">
  <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
    
    <!-- Simple Header -->
    <div class="text-center mb-20">
      <h1 class="text-5xl md:text-6xl font-satoshi font-extrabold text-black mb-6">
        About Me
      </h1>
      <div class="w-16 h-1 bg-[var(--button-secondary)] mx-auto"></div>
    </div>

    <!-- Main Photo -->
    <div class="text-center mb-16">
      <div class="inline-block">
        <img 
          src="/Best photos Fer/IMG_3363.JPEG" 
          alt="Fernanda, Spanish teacher" 
          class="w-64 h-64 md:w-80 md:h-80 rounded-full object-cover shadow-lg mx-auto"
        />
      </div>
    </div>

    <!-- Simple Bio -->
    <div class="max-w-2xl mx-auto text-center space-y-8 mb-20">
      <h2 class="text-3xl md:text-4xl font-satoshi font-bold text-black">
        Â¡Hola! I'm Fernanda
      </h2>
      
      <div class="space-y-6 text-lg text-black leading-relaxed">
        <p>
          I'm a 27-year-old Spanish teacher from Chile with over 5 years of experience teaching in schools, volunteer programs, and private lessons.
        </p>
        
        <p>
          Having learned English and French myself, I understand the challenges of language learning and the frustration of feeling stuck.
        </p>
        
        <p class="text-xl font-semibold text-[var(--button-secondary)]">
          My approach is 100% immersive Spanish, helping you think in Spanish from day one.
        </p>
      </div>
    </div>



    <!-- Simple CTA -->
    <div class="text-center">
      <h3 class="text-2xl font-satoshi font-bold text-black mb-6">
        Ready to start your Spanish journey?
      </h3>
      <Button 
        href="/schedule-class" 
        variant="primary" 
        size="lg" 
        rounded={true}
        shadow={true}
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 mr-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
        </svg>
        Book your first class - It's FREE!
      </Button>
    </div>

  </div>
</section>
</Layout>

