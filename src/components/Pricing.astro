  {
    name: "Single Class",
    price: 11,
    currency: "USD",
    classes: 1,
    pricePerClass: 11,
    features: [
      "1 group class",
      "50 minutes per class",
      "Minimum 2 people",
      "Custom materials",
      "WhatsApp support",
      "Flexible scheduling"
    ],
    buttonText: "Get Started",
