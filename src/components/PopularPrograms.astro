---
import Button from '../components/ui/button.astro';
---

<section class="py-16 bg-[var(--background-primary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10">
            <h2 class="text-5xl font-satoshi font-extrabold mb-8">Our Popular Programs</h2>
            
            <div class="flex justify-center gap-4 mb-12">
                <Button 
                    variant="primary" 
                    size="md" 
                    rounded={true}
                    shadow={true}
                >
                    Normal
                </Button>
                <Button 
                    variant="secondary" 
                    size="md" 
                    rounded={true}
                >
                    Intensive
                </Button>
            </div>
        </div>
        
        <!-- Programs Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Card 1 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-1.jpg" alt="Conversational Spanish" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Conversational Spanish</h3>
                    <p class="text-gray-600 text-sm mb-4">Learn practical everyday conversation skills with our native speakers. Perfect for travelers and beginners.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">8 classes total</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 2 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-2.jpg" alt="Business Spanish" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Business Spanish</h3>
                    <p class="text-gray-600 text-sm mb-4">Master professional vocabulary and communication for workplace settings and international business.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">12 classes total</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 3 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-3.jpg" alt="Cultural Immersion" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Cultural Immersion</h3>
                    <p class="text-gray-600 text-sm mb-4">Experience Hispanic culture while learning language through music, art, literature, and authentic traditions.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">10 classes total</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 4 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-4.jpg" alt="Grammar Fundamentals" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Grammar Fundamentals</h3>
                    <p class="text-gray-600 text-sm mb-4">Build a solid foundation with personalized lessons on Spanish grammar, verb conjugation, and sentence structure.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">15 classes total</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 5 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-5.jpg" alt="Travel Spanish" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Travel Spanish</h3>
                    <p class="text-gray-600 text-sm mb-4">Learn essential phrases for traveling in Spanish-speaking countries. Ideal for short-term travelers.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">6 classes total</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 6 -->
            <div class="bg-white rounded-3xl shadow-lg overflow-hidden transform transition hover:-translate-y-1 hover:shadow-xl">
                <div class="p-1">
                    <img src="/program-6.jpg" alt="Advanced Conversation" class="w-full h-48 object-cover rounded-2xl">
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-bold mb-2">Advanced Conversation</h3>
                    <p class="text-gray-600 text-sm mb-4">Refine your speaking skills with complex topics, debate, and authentic conversations with native speakers.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-4 h-4 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-2 h-2"></span>
                            </span>
                            <span class="text-xs text-gray-500">10 classes total</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-2 px-4 rounded-full text-sm font-bold hover:-translate-y-1 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 