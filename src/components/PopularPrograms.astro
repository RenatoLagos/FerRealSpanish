---
import Button from '../components/ui/button.astro';
---

<section class="py-6 bg-[var(--background-primary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-6xl font-satoshi font-extrabold mb-6 mt-12">Our Class Topics</h2>
            <p class="text-text-secondary text-lg font-satoshi font-semibold mb-8 max-w-lg mx-auto">Explore our class topics designed for different levels and learning objectives.</p>
        </div>  
        <!-- Programs Cards Grid -->
        <div class="grid grid-cols-1 gap-8">
            <!-- Single row with 4 cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Beginners Card -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] border-4 border-gray-200 overflow-hidden transform transition hover:-translate-y-0.5 flex flex-col h-[360px]">
                    <div class="p-0.5">
                        <img src="/program-1.webp" alt="Beginners" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="px-3.5 pt-4 pb-2 flex flex-col flex-grow">
                        <h3 class="text-lg font-bold mb-3 mt-3.5">Beginners</h3>
                        <p class="text-gray-600 text-xs mb-4 flex-grow">Perfect for those starting their Spanish journey. I'll guide you through fundamentals with patience and personalized attention.</p>
                        <div class="flex justify-end items-center mt-auto">
                            <Button 
                                href="/schedule-class"
                                variant="primary" 
                                size="sm" 
                                textSize="xs"
                                rounded={true}
                                shadow={true}
                            >
                                Book Now
                            </Button>
                        </div>
                    </div>
                </div>
                
                <!-- Ready to Travel Card -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] border-4 border-gray-200 overflow-hidden transform transition hover:-translate-y-0.5 flex flex-col h-[360px]">
                    <div class="p-0.5">
                        <img src="/program-5.jpg" alt="Ready to Travel" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="px-3.5 pt-4 pb-2 flex flex-col flex-grow">
                        <h3 class="text-lg font-bold mb-3 mt-3.5">Ready to Travel</h3>
                        <p class="text-gray-600 text-xs mb-4 flex-grow">Essential phrases and cultural tips for your upcoming trip. I'll prepare you for real-world travel situations.</p>
                        <div class="flex justify-end items-center mt-auto">
                            <Button 
                                href="/about" 
                                variant="secondary" 
                                size="sm" 
                                textSize="xs"
                                rounded={true}
                            >
                                Learn More
                            </Button>
                        </div>
                    </div>
                </div>
                
                <!-- Real Talk Card -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] border-4 border-gray-200 overflow-hidden transform transition hover:-translate-y-0.5 flex flex-col h-[360px]">
                    <div class="p-0.5">
                        <img src="/program-4.avif" alt="Real Talk" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="px-3.5 pt-4 pb-2 flex flex-col flex-grow">
                        <h3 class="text-lg font-bold mb-3 mt-3.5">Real Talk</h3>
                        <p class="text-gray-600 text-xs mb-4 flex-grow">Authentic conversations and everyday expressions. I'll teach you how Spanish speakers really talk in daily life.</p>
                        <div class="flex justify-end items-center mt-auto">
                            <Button 
                                href="/about" 
                                variant="secondary" 
                                size="sm" 
                                textSize="xs"
                                rounded={true}
                            >
                                Learn More
                            </Button>
                        </div>
                    </div>
                </div>
                
                <!-- Cultural Immersion Card -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] border-4 border-gray-200 overflow-hidden transform transition hover:-translate-y-0.5 flex flex-col h-[360px]">
                    <div class="p-0.5">
                        <img src="/program-3.webp" alt="Cultural Immersion" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="px-3.5 pt-4 pb-2 flex flex-col flex-grow">
                        <h3 class="text-lg font-bold mb-3 mt-3.5">Cultural Immersion</h3>
                        <p class="text-gray-600 text-xs mb-4 flex-grow">Dive deep into Latin American culture while learning Spanish. I'll share traditions, customs, and cultural insights.</p>
                        <div class="flex justify-end items-center mt-auto">
                            <Button 
                                href="/about" 
                                variant="secondary" 
                                size="sm" 
                                textSize="xs"
                                rounded={true}
                            >
                                Learn More
                            </Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 