---
import Button from '../components/ui/button.astro';
---

<section class="py-6 bg-[var(--background-primary)]">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
        <div class="text-center mb-8">
            <h2 class="text-4xl font-satoshi font-extrabold mb-6 mt-12">Our Popular Programs</h2>
            <p class="text-text-secondary text-lg font-satoshi font-semibold mb-8 max-w-lg mx-auto">Discover our most popular Spanish programs designed to meet your learning goals.</p>
            
            <div class="flex justify-center gap-3 mb-8">
                <Button 
                    variant="secondary" 
                    size="md" 
                    rounded={true}
                >
                    Normal
                </Button>
                <Button 
                    variant="primary" 
                    size="md" 
                    rounded={true}
                    shadow={true}
                >
                    Intensive
                </Button>
            </div>
        </div>
        
        <!-- Programs Cards Grid -->
        <div class="grid grid-cols-1 gap-8 md:gap-y-12">
            <!-- Top row - 3 cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Card 1 -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                    <div class="p-0.5">
                        <img src="/program-1.webp" alt="Conversational Spanish" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="py-5 px-3.5">
                        <h3 class="text-base font-bold mb-3">Conversational Spanish</h3>
                        <p class="text-gray-600 text-xs line-clamp-3 mb-4">Master everyday Spanish conversation with native speakers. Practice common phrases and build confidence speaking.</p>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <span class="bg-green-100 rounded-full w-2.5 h-2.5 flex items-center justify-center mr-1">
                                    <span class="bg-green-500 rounded-full w-1.5 h-1.5"></span>
                                </span>
                                <span class="text-xs text-gray-500">8 classes</span>
                            </div>
                            <button class="bg-[var(--button-primary)] text-white py-1 px-3 rounded-full text-xs font-bold hover:-translate-y-0.5 transition-transform">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Card 2 -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                    <div class="p-0.5">
                        <img src="/program-2.jpeg" alt="Business Spanish" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="py-5 px-3.5">
                        <h3 class="text-base font-bold mb-3">Business Spanish</h3>
                        <p class="text-gray-600 text-xs line-clamp-3 mb-4">Master professional vocabulary and communication for workplace settings.</p>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <span class="bg-green-100 rounded-full w-2.5 h-2.5 flex items-center justify-center mr-1">
                                    <span class="bg-green-500 rounded-full w-1.5 h-1.5"></span>
                                </span>
                                <span class="text-xs text-gray-500">12 classes</span>
                            </div>
                            <button class="bg-[var(--button-secondary)] text-white py-1 px-3 rounded-full text-xs font-bold hover:-translate-y-0.5 transition-transform">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Card 3 -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                    <div class="p-0.5">
                        <img src="/program-3.webp" alt="Cultural Immersion" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="py-5 px-3.5">
                        <h3 class="text-base font-bold mb-3">Cultural Immersion</h3>
                        <p class="text-gray-600 text-xs line-clamp-3 mb-4">Experience Hispanic culture through music, art, and authentic traditions.</p>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <span class="bg-green-100 rounded-full w-2.5 h-2.5 flex items-center justify-center mr-1">
                                    <span class="bg-green-500 rounded-full w-1.5 h-1.5"></span>
                                </span>
                                <span class="text-xs text-gray-500">10 classes</span>
                            </div>
                            <button class="bg-[var(--button-primary)] text-white py-1 px-3 rounded-full text-xs font-bold hover:-translate-y-0.5 transition-transform">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Bottom row - 2 cards centered -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:mx-auto md:max-w-2xl">
                <!-- Card 4 -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                    <div class="p-0.5">
                        <img src="/program-4.avif" alt="Grammar Fundamentals" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="py-5 px-3.5">
                        <h3 class="text-base font-bold mb-3">Grammar Fundamentals</h3>
                        <p class="text-gray-600 text-xs line-clamp-3 mb-4">Build a solid foundation with personalized lessons on Spanish grammar.</p>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <span class="bg-green-100 rounded-full w-2.5 h-2.5 flex items-center justify-center mr-1">
                                    <span class="bg-green-500 rounded-full w-1.5 h-1.5"></span>
                                </span>
                                <span class="text-xs text-gray-500">15 classes</span>
                            </div>
                            <button class="bg-[var(--button-secondary)] text-white py-1 px-3 rounded-full text-xs font-bold hover:-translate-y-0.5 transition-transform">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Card 5 -->
                <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                    <div class="p-0.5">
                        <img src="/program-5.jpg" alt="Travel Spanish" class="w-full h-32 object-cover rounded-t-2xl">
                    </div>
                    <div class="py-5 px-3.5">
                        <h3 class="text-base font-bold mb-3">Travel Spanish</h3>
                        <p class="text-gray-600 text-xs line-clamp-3 mb-4">Learn essential phrases for traveling in Spanish-speaking countries.</p>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <span class="bg-green-100 rounded-full w-2.5 h-2.5 flex items-center justify-center mr-1">
                                    <span class="bg-green-500 rounded-full w-1.5 h-1.5"></span>
                                </span>
                                <span class="text-xs text-gray-500">6 classes</span>
                            </div>
                            <button class="bg-[var(--button-primary)] text-white py-1 px-3 rounded-full text-xs font-bold hover:-translate-y-0.5 transition-transform">
                                Learn More
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 