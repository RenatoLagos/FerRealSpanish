---
import Button from '../components/ui/button.astro';
---

<section class="py-6 bg-[var(--background-primary)]">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-satoshi font-extrabold mb-6">Our Popular Programs</h2>
            
            <div class="flex justify-center gap-3 mb-8">
                <Button 
                    variant="secondary" 
                    size="sm" 
                    rounded={true}
                >
                    Normal
                </Button>
                <Button 
                    variant="primary" 
                    size="sm" 
                    rounded={true}
                    shadow={true}
                >
                    Intensive
                </Button>
            </div>
        </div>
        
        <!-- Programs Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Card 1 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-1.jpg" alt="Conversational Spanish" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Conversational Spanish</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Learn practical everyday conversation skills with our native speakers.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">8 classes</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 2 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-2.jpg" alt="Business Spanish" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Business Spanish</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Master professional vocabulary and communication for workplace settings.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">12 classes</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 3 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-3.jpg" alt="Cultural Immersion" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Cultural Immersion</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Experience Hispanic culture through music, art, and authentic traditions.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">10 classes</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 4 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-4.jpg" alt="Grammar Fundamentals" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Grammar Fundamentals</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Build a solid foundation with personalized lessons on Spanish grammar.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">15 classes</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 5 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-5.jpg" alt="Travel Spanish" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Travel Spanish</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Learn essential phrases for traveling in Spanish-speaking countries.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">6 classes</span>
                        </div>
                        <button class="bg-[var(--button-primary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Card 6 -->
            <div class="bg-white rounded-xl shadow-[6px_6px_0px_0px_#000000] overflow-hidden transform transition hover:-translate-y-0.5">
                <div class="p-0.5">
                    <img src="/program-6.jpg" alt="Advanced Conversation" class="w-full h-24 object-cover rounded-lg">
                </div>
                <div class="p-2">
                    <h3 class="text-sm font-bold">Advanced Conversation</h3>
                    <p class="text-gray-600 text-[10px] mb-1 line-clamp-2">Refine your speaking skills with complex topics and native speakers.</p>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="bg-green-100 rounded-full w-2 h-2 flex items-center justify-center mr-1">
                                <span class="bg-green-500 rounded-full w-1 h-1"></span>
                            </span>
                            <span class="text-[9px] text-gray-500">10 classes</span>
                        </div>
                        <button class="bg-[var(--button-secondary)] text-white py-0.5 px-2 rounded-full text-[9px] font-bold hover:-translate-y-0.5 transition-transform">
                            Learn More
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 