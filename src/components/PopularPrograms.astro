---
import Button from '../components/ui/button.astro';

interface ProgramCard {
  title: string;
  price: number;
  currency: string;
  classes: number;
  description: string;
  image: string;
  alt: string;
  buttonText: string;
  buttonVariant: 'primary' | 'secondary';
  buttonHref: string;
  shadow?: boolean;
}

const programCards: ProgramCard[] = [
  {
    title: "Beginners",
    price: 336,
    currency: "USD",
    classes: 12,
    description: "Perfect for those starting their Spanish journey. I'll guide you through fundamentals with patience and personalized attention.",
    image: "/program-1.webp",
    alt: "Beginners",
    buttonText: "Book Now",
    buttonVariant: "primary",
    buttonHref: "/schedule-class",
    shadow: true
  },
  {
    title: "Ready to Travel",
    price: 336,
    currency: "USD",
    classes: 12,
    description: "Essential phrases and cultural tips for your upcoming trip. I'll prepare you for real-world travel situations.",
    image: "/program-5.jpg",
    alt: "Ready to Travel",
    buttonText: "Learn More",
    buttonVariant: "secondary",
    buttonHref: "/about"
  },
  {
    title: "Real Talk",
    price: 336,
    currency: "USD",
    classes: 12,
    description: "Authentic conversations and everyday expressions. I'll teach you how Spanish speakers really talk in daily life.",
    image: "/program-4.avif",
    alt: "Real Talk",
    buttonText: "Learn More",
    buttonVariant: "secondary",
    buttonHref: "/about"
  },
  {
    title: "Cultural Immersion",
    price: 336,
    currency: "USD",
    classes: 12,
    description: "Dive deep into Latin American culture while learning Spanish. I'll share traditions, customs, and cultural insights.",
    image: "/program-3.webp",
    alt: "Cultural Immersion",
    buttonText: "Learn More",
    buttonVariant: "secondary",
    buttonHref: "/about"
  }
];
---

<section class="py-6 bg-[var(--background-primary)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-6xl font-satoshi font-extrabold mb-6 mt-12">Our Class Topics</h2>
            <p class="text-text-secondary text-lg font-satoshi font-semibold mb-8 max-w-lg mx-auto">Explore our class topics designed for different levels and learning objectives.</p>
        </div>  
        
        <!-- Programs Cards Grid -->
        <div class="grid grid-cols-1 gap-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {programCards.map((card) => (
                    <div class="p-3.5 bg-white rounded-2xl shadow-[6px_6px_0px_0px_#000000] border-4 border-gray-200 overflow-hidden transform transition hover:-translate-y-0.5 flex flex-col h-[480px]">
                        
                        <!-- Image Section - Fixed Height -->
                        <div class="p-0.5 h-[140px] flex-shrink-0">
                            <img 
                                src={card.image} 
                                alt={card.alt} 
                                class="w-full h-full object-cover rounded-t-2xl"
                            />
                        </div>
                        
                        <!-- Content Section - Flexible -->
                        <div class="px-3.5 pt-4 pb-4 flex flex-col h-full">
                            
                            <!-- Title Section - Fixed Height -->
                            <div class="h-[32px] flex items-center mb-3 flex-shrink-0">
                                <h3 class="text-lg font-bold text-gray-900">{card.title}</h3>
                            </div>
                            
                            <!-- Pricing Section - Fixed Height -->
                            <div class="h-[44px] mb-4 flex-shrink-0">
                                <div class="text-lg font-bold text-gray-900 leading-tight">
                                    ${card.price} <span class="text-sm font-normal">{card.currency}</span>
                                </div>
                                <div class="text-sm font-semibold text-[var(--button-primary)] leading-tight">
                                    {card.classes} classes
                                </div>
                            </div>
                            
                            <!-- Description Section - Takes remaining space -->
                            <div class="flex-grow mb-4 flex items-start">
                                <p class="text-gray-600 text-xs leading-relaxed">{card.description}</p>
                            </div>
                            
                            <!-- Button Section - Always at bottom -->
                            <div class="flex justify-end items-end mt-auto pt-2">
                                <Button 
                                    href={card.buttonHref}
                                    variant={card.buttonVariant}
                                    size="sm" 
                                    textSize="xs"
                                    rounded={true}
                                    shadow={card.shadow}
                                >
                                    {card.buttonText}
                                </Button>
                            </div>
                            
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section> 