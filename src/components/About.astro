---
import Button from './ui/button.astro';
---

<!-- Minimalist About Section -->
<section id="about-section" class="py-20 bg-[var(--background-secondary)]">
  <div class="max-w-3xl mx-auto px-6 text-center">
    
    <!-- Simple Header -->
    <h1 class="text-6xl font-satoshi font-extrabold text-white mb-8">
      <div class="svg-container">
        <div class="text-white font-satoshi font-extrabold">About Me</div>
        <svg viewBox="0 0 300 100" preserveAspectRatio="none">
          <ellipse cx="150" cy="45" rx="145" ry="40" fill="none" stroke="#ffffff" stroke-width="1.2" transform="rotate(0 150 40)" />
          <ellipse cx="150" cy="50" rx="145" ry="40" fill="none" stroke="#ffffff" stroke-width="1.2" transform="rotate(-8 150 40)" />
        </svg>
      </div>
    </h1>

    <!-- YouTube Video -->
    <div class="mt-16 mb-16 px-8 max-w-3xl mx-auto">
      <div class="relative w-full" style="padding-bottom: 56.25%;">
        <iframe
          class="absolute top-0 left-0 w-full h-full rounded-2xl shadow-2xl"
          src="https://www.youtube.com/embed/rL_IQU11uJk"
          title="Fernanda - Spanish Teacher Introduction"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
      </div>
    </div>

    <!-- Simple Bio -->
    <div class="max-w-xl mx-auto space-y-4 mb-8">
      <h2 class="text-2xl md:text-3xl font-satoshi font-bold text-white">
        Â¡Hola! I'm Fernanda
      </h2>

      <p class="text-lg font-bold text-white leading-relaxed max-w-2xl mx-auto">
        I'm a Spanish teacher from Chile with 5+ years of experience. Having learned English and French myself, I understand the challenges of language learning.
      </p>
    </div>

  </div>
</section>

<style>
  .svg-container {
    position: relative;
    display: inline-block;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .svg-container svg {
    position: absolute;
    top: 0;
    left: -30px;
    right: -30px;
    pointer-events: none;
  }
</style> 