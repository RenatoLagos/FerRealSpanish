---
interface Props {
  regularPrice?: number;
  salePrice?: number;
  currency?: string;
  numberOfClasses?: number;
  freeClasses?: number;
  pricePerClass?: number;
}

const {
  regularPrice = 600,
  salePrice = 480,
  currency = "USD",
  numberOfClasses = 24,
  freeClasses = 5,
  pricePerClass = 20,
} = Astro.props;
---

<section class="w-full max-w-5xl mx-auto my-16 px-4">
  <div class="FullProgram">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-2/5 relative flex items-center justify-center p-6 rounded-l-lg">
        <img 
          src="/full_program.jpg" 
          alt="Special Price" 
          class="w-full max-w-[400px] h-auto object-contain rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center">
          <div class="relative">
          </div>
        </div>
      </div>    
      <div class="md:w-3/5 p-8">        
        <h2 class="text-3xl font-satoshi font-bold text-gray-900 mb-4">Pack 24 classes - Regular Classes</h2>
        
        <div class="mb-4 flex items-center">
          <span class="text-gray-500 line-through">{regularPrice} {currency}</span>
          <span class="text-black ml-2 text-2xl font-bold">{salePrice} {currency}</span>
        </div>
        
        <div class="mb-4">
          <div class="flex items-center mb-2">
            <span class="text-orange-500 text-lg mr-2">ðŸ’°</span>
            <span class="text-lg font-semibold">${pricePerClass}/class</span>
          </div>
          <div class="flex items-center mb-4">
            <span class="text-purple-500 text-lg mr-2">ðŸ“…</span>
            <span class="text-gray-700">1-2 or 3 classes/week</span>
          </div>
        </div>
        
        <p class="text-gray-700 mb-4">
          {numberOfClasses} personalized classes according to your needs and objectives. 
          Perfect for maintaining a consistent learning pace with flexible scheduling.
        </p>
        
        <div class="bg-green-100 border border-green-300 rounded-lg p-3">
          <p class="text-green-800 font-semibold">+{freeClasses} FREE CLASSES</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .FullProgram {
    background-color: white;
    border-radius: 20px;
    padding: 20px;
    box-shadow: 6px 6px 0px 0px #000000;
    margin-bottom: 100px;
    margin-top: 120px;
  }
</style>


