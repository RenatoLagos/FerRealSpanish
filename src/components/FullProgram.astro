---
interface Props {
  regularPrice?: number;
  salePrice?: number;
  currency?: string;
  numberOfClasses?: number;
  freeClasses?: number;
  freeClassesValue?: number;
}

const {
  regularPrice = 756,
  salePrice = 660,
  currency = "USD",
  numberOfClasses = 20,
  freeClasses = 3,
  freeClassesValue = 96,
} = Astro.props;
---

<section class="w-full max-w-5xl mx-auto my-16 px-4">
  <div class="FullProgram">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-2/5 relative flex items-center justify-center p-6 rounded-l-lg">
        <img 
          src="/full_program.jpg" 
          alt="Special Price" 
          class="w-full max-w-[400px] h-auto object-contain rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center">
          <div class="relative">
          </div>
        </div>
      </div>    
      <div class="md:w-3/5 p-8">        
        <h2 class="text-3xl font-satoshi font-bold text-gray-900 mb-4">Best seller: Full Program</h2>
        
        <div class="mb-4 flex items-center">
          <span class="text-gray-500 line-through">{regularPrice} {currency}</span>
          <span class="text-black ml-2">{salePrice} {currency}.</span>
          <span class="ml-3 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded-md uppercase tracking-wide transform -rotate-2">Sale!</span>
        </div>
        <p class="text-gray-700">
          This ultimate program offers {numberOfClasses} classes covering grammar, situational lessons, 
          vocabulary, conversation, and free topics of your choice. Purchase now and receive {freeClasses} additional 
          classes for free, valued at ${freeClassesValue}. Gain the flexibility and resources to master 
          the language at your own pace.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .FullProgram {
    background-color: white;
    border-radius: 20px;
    padding: 20px;
    box-shadow: 6px 6px 0px 0px #000000;
    margin-bottom: 100px;
    margin-top: 120px;
  }
</style>


