---
import Button from './ui/button.astro';

interface Props {
  regularPrice?: number;
  salePrice?: number;
  currency?: string;
  freeClasses?: number;
  pricePerClass?: number;
  description?: string;
}

const {
  regularPrice = 1440,
  salePrice = 1104,
  currency = "USD",
  freeClasses = 10,
  pricePerClass = 23,
  description = "48 personalized classes according to your needs and objectives. Perfect for maintaining a consistent learning pace with flexible scheduling over 6 months.",
} = Astro.props;
---

<section class="w-full max-w-5xl mx-auto my-16 px-4">
  <div class="FullProgram">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-2/5 relative flex items-center justify-center rounded-l-lg">
        <img 
          src="/full_program.jpg" 
          alt="Special Price" 
          class="w-full max-w-[500px] h-auto object-contain rounded-lg shadow-md hover:scale-105 transition-transform duration-300"
        />
        <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center">
          <div class="relative">
          </div>
        </div>
      </div>    
      <div class="md:w-3/5 ml-12 pr-12">        
        <Button 
          variant="primary" 
          size="sm" 
          class="pointer-events-none mb-3"
          rounded={true}
        >
          Best-selling
        </Button> 
        <Button 
          variant="secondary" 
          size="sm"
          class="pointer-events-none"
          rounded={true}
        >
          +{freeClasses} FREE CLASSES
        </Button>       
        <h2 class="text-3xl font-satoshi font-bold text-gray-900 mb-4 mt-2">6 Months - 48 Classes</h2>
        
        <div class="mb-4 flex items-center">
          <span class="text-gray-500 line-through">{regularPrice} {currency}</span>
          <span class="text-black ml-2 text-2xl font-bold">{salePrice} {currency}</span>
        </div>
        
        <div class="mb-4">
          <div class="flex items-center mb-2">
            <span class="text-orange-500 text-lg mr-2">ðŸ’°</span>
            <span class="text-lg font-semibold mr-12">${pricePerClass}/class</span>
            <span class="text-purple-500 text-lg">ðŸ“…</span>
            <span class="text-gray-700">2 classes/week</span>
          </div>
        </div>
        
        <p class="text-gray-700 mb-4">
          {description}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .FullProgram {
    background-color: white;
    border-radius: 20px;
    padding-top: 40px;
    padding-bottom: 40px;
    padding-left: 40px;
    padding-right: 0px;
    box-shadow: 6px 6px 0px 0px #000000;
    border: 3px solid #e5e7eb;
    margin-bottom: 100px;
    margin-top: 120px;
  }
</style>


