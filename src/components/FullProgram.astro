---
interface Props {
  regularPrice?: number;
  salePrice?: number;
  currency?: string;
  numberOfClasses?: number;
  freeClasses?: number;
  freeClassesValue?: number;
}

const {
  regularPrice = 756,
  salePrice = 660,
  currency = "USD",
  numberOfClasses = 20,
  freeClasses = 3,
  freeClassesValue = 96,
} = Astro.props;
---

<section class="w-full max-w-4xl mx-auto my-12 px-4">
  <div class="bg-gradient-to-r from-amber-50 to-amber-100 rounded-lg shadow-lg overflow-hidden">
    <div class="relative">
      <div class="absolute top-5 right-5 bg-red-600 text-white text-sm font-bold py-1 px-3 rounded-full transform rotate-3 shadow-md">
        Best Seller
      </div>
      
      <div class="p-6 sm:p-10">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Full Program</h2>
        
        <div class="flex items-center mb-6">
          <span class="text-gray-500 line-through text-xl mr-3">{regularPrice} {currency}</span>
          <span class="text-3xl sm:text-4xl font-bold text-amber-600">{salePrice} {currency}</span>
        </div>
        
        <p class="text-gray-700 text-lg mb-6">
          This ultimate program offers {numberOfClasses} classes covering grammar, situational lessons, 
          vocabulary, conversation, and free topics of your choice. Purchase now and receive {freeClasses} additional 
          classes for free, valued at ${freeClassesValue}. Gain the flexibility and resources to master 
          the language at your own pace.
        </p>
        
        <div class="bg-white rounded-lg p-4 mb-6 border border-amber-200">
          <h3 class="font-semibold text-gray-800 mb-2">What's included:</h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{numberOfClasses} comprehensive Spanish lessons</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>{freeClasses} bonus classes (${freeClassesValue} value)</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Personalized learning experience</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Flexible scheduling options</span>
            </li>
          </ul>
        </div>
        
        <button class="bg-amber-600 hover:bg-amber-700 text-white font-bold py-3 px-8 rounded-lg transition duration-300 shadow-md w-full sm:w-auto">
          Enroll Now
        </button>
      </div>
    </div>
  </div>
</section>
