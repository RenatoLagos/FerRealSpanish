---
import Button from '../components/ui/button.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Learn Spanish the Real Way", 
  subtitle = "Connect with native speakers and immerse yourself in the language and culture"
} = Astro.props;
---

<section class="relative py-20 md:py-28 bg-[var(--background-primary)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
      <div class="text-center md:text-left md:w-3/5">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          {title}
          <span class="text-[var(--button-primary)]">.</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-[#333]/80">
          {subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <Button 
            href="/classes" 
            variant="primary" 
            size="lg" 
            rounded={true}
          >
            Start Learning
          </Button>
          <Button 
            href="/about" 
            variant="secondary" 
            size="md" 
            rounded={true}
          >
            Learn More
          </Button>
        </div>
      </div>
      <div class="hidden md:block md:w-2/5 flex-shrink-0">
        <img 
          src="/Fer.jpeg" 
          alt="Fernando, Spanish teacher" 
          class="w-full max-w-xs mx-auto rounded-2xl shadow-lg object-cover" 
          loading="lazy"
        />
      </div>
    </div>
  </div>
  <!-- Decorative wave background is applied via the wave-bg class -->
</section>

<style>
  .wave-bg {
    background-color: var(--background-secondary);
  }
</style>