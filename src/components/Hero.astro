---
import Button from '../components/ui/button.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Learn Spanish,", 
  subtitle = "I help you learn Spanish authentically through personalized classes, conversation practice with a native speaker, and complete immersion. My approach helps you develop fluency while exploring travel tips, local expressions, and much more."
} = Astro.props;
---

<section class="relative py-24 md:py-36 bg-[var(--background-primary)]">
  <div class="max-w-7xl mx-auto px-8 sm:px-12 lg:px-16 md:mt-12">
    <div class="flex flex-col md:flex-row items-center md:items-center gap-12 md:gap-16">
      <div class="text-center md:text-left md:w-3/5">
        <h1 class="text-8xl font-satoshi font-extrabold mb-10 tracking-normal leading-tight title-with-breaks">
          {title}
          <div class="svg-container">
            <div class="text-[var(--button-secondary)] font-satoshi font-extrabold">For Real</div>
            <svg viewBox="0 0 300 100" preserveAspectRatio="none">
              <ellipse cx="150" cy="50" rx="145" ry="40" fill="none" stroke="#75C2AE" stroke-width="1.2" transform="rotate(0 150 50)" />
              <ellipse cx="150" cy="50" rx="145" ry="40" fill="none" stroke="#75C2AE" stroke-width="1.2" transform="rotate(-8 150 50)" />
            </svg>
          </div>
        </h1>
        <p class="text-lg font-semibold mb-12 text-black max-w-2xl">
          {subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center md:justify-start">
          <Button 
            href="/about" 
            variant="secondary" 
            size="md" 
            rounded={true}
          >
            Learn More
          </Button>
          <Button
            href="/schedule-class"
            variant="primary"
            size="lg"
            rounded={true}
            shadow={true}
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 mr-3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
            </svg>
            Join the Waitlist
          </Button>
        </div>
      </div>
      <div class="hidden md:block md:w-2/5 flex-shrink-0 relative">
        <!-- SVG con estrellas -->
        <svg width="120" height="80" viewBox="-40 70 300 200" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute top-[-40px] left-0 w-full h-full z-10 pointer-events-none">
  
          <path
            d="M80 37 Q83 52 95 58 Q83 62 80 77 Q77 62 65 58 Q77 52 80 37"
            stroke="#26221D"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            fill="none"
          />
          <path
            d="M48 70 Q50 77 57 80 Q50 82 48 89 Q46 82 39 80 Q46 77 48 70"
            stroke="#26221D"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            fill="none"
          />
        </svg>
        
        <img 
          src="/Fer.jpeg" 
          alt="Fernanda, Spanish teacher" 
          class="fer-img"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .wave-bg {
    background-color: var(--background-secondary);
  }

  .title-with-breaks {
    white-space: pre-line;
  }

  .fer-img {
    width: 100%;
    max-width: 330px;
    margin-left: 145px;
    margin-right: 0px;
    border-radius: 200px;
    object-fit: cover;
    box-shadow: 12px 12px 0px 0px #000000;
  }

  /* Responsive fix para evitar desbordamiento horizontal en m√≥vil */
  @media (max-width: 768px) {
    .fer-img {
      margin-left: 0;
      margin-right: 0;
      max-width: 280px;
    }
    
    .title-with-breaks {
      font-size: 3.5rem;
    }
  }

  .svg-container {
    position: relative;
    display: inline-block;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .svg-container svg {
    position: absolute;
    top: 0;
    left: -30px;
    right: -30px;
    pointer-events: none;
  }
</style>