---
import Button from '../components/ui/button.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Learn Spanish,\u2003\u2003\u2003\u2003", 
  subtitle = "I help you learn Spanish authentically through personalized classes, conversation practice with a native speaker, and complete immersion. My approach helps you develop fluency while exploring travel tips, local expressions, and much more."
} = Astro.props;
---

<section class="relative py-20 md:py-28 bg-[var(--background-primary)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center md:items-center gap-8">
      <div class="text-center md:text-left md:w-3/5">
        <h1 class="text-6xl font-satoshi font-extrabold mb-6 tracking-normal leading-tight title-with-breaks">
          {title}
          <div class="svg-container">
            <div class="text-[var(--button-secondary)] font-satoshi font-extrabold">For Real</div>
            <svg viewBox="0 0 300 100" preserveAspectRatio="none">
              <ellipse cx="150" cy="50" rx="150" ry="40" fill="none" stroke="#75C2AE" stroke-width="1.2" transform="rotate(0 150 50)" />
              <ellipse cx="150" cy="50" rx="150" ry="40" fill="none" stroke="#75C2AE" stroke-width="1.2" transform="rotate(-8 150 50)" />
            </svg>
          </div>
        </h1>
        <p class="text-lg font-semibold mb-8 text-black">
          {subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <Button 
            href="/about" 
            variant="secondary" 
            size="md" 
            rounded={true}
          >
            Learn More
          </Button>
          <Button 
            href="/schedule-class" 
            variant="primary" 
            size="lg" 
            rounded={true}
            shadow={true}
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 mr-3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
            </svg>
            Book your first class - It's FREE!
          </Button>
        </div>
      </div>
      <div class="hidden md:block md:w-2/5 flex-shrink-0">
        <img 
          src="/Fer.jpeg" 
          alt="Fernanda, Spanish teacher" 
          class="fer-img"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .wave-bg {
    background-color: var(--background-secondary);
  }

  .title-with-breaks {
    white-space: pre-line;
  }

  .fer-img {
    width: 100%;
    max-width: 330px;
    margin-left: 145px;
    margin-right: 0px;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 12px 12px 0px 0px #000000;
  }

  .svg-container {
    position: relative;
    display: inline-block;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .svg-container svg {
    position: absolute;
    top: 0;
    left: -30px;
    right: -30px;
    pointer-events: none;
  }
</style>