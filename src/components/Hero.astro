---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Learn Spanish the Real Way", 
  subtitle = "Connect with native speakers and immerse yourself in the language and culture"
} = Astro.props;
---

<section class="relative py-20 md:py-28 bg-background wave-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center md:text-left md:w-3/5">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-foreground">
        {title}
        <span class="text-warm-orange">.</span>
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-muted-foreground">
        {subtitle}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <a href="/classes" class="bg-primary hover-lift text-primary-foreground px-8 py-3 rounded-full font-bold text-lg inline-block">
          Start Learning
        </a>
        <a href="/about" class="bg-accent hover-lift text-accent-foreground px-8 py-3 rounded-full font-bold text-lg inline-block">
          Learn More
        </a>
      </div>
    </div>
  </div>
  <!-- Decorative wave background is applied via the wave-bg class -->
</section>