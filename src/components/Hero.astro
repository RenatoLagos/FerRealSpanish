---
import Button from '../components/ui/button.astro';

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Achieving your Dreams through ", 
  subtitle = "Learn Spanish authentically through personalized classes, conversations with native speakers, and complete immersion in Hispanic culture. Develop fluency while exploring traditions, local expressions, and much more."
} = Astro.props;
---

<section class="relative py-20 md:py-28 bg-[var(--background-primary)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center md:items-center gap-8">
      <div class="text-center md:text-left md:w-3/5">
        <h1 class="text-6xl font-satoshi font-extrabold mb-6 tracking-normal leading-tight title-with-breaks">
          {title}
          <span class="text-[var(--button-secondary)] font-satoshi font-extrabold">Spanish</span>
        </h1>
        <p class="text-lg font-semibold mb-8 text-black">
          {subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <Button 
            href="/about" 
            variant="secondary" 
            size="md" 
            rounded={true}
          >
            Learn More
          </Button>
          <Button 
            href="/classes" 
            variant="primary" 
            size="lg" 
            rounded={true}
            shadow={true}
          >
            Book your first class - It's FREE!
          </Button>
        </div>
      </div>
      <div class="hidden md:block md:w-2/5 flex-shrink-0">
        <img 
          src="/Fer.jpeg" 
          alt="Fernanda, Spanish teacher" 
          class="fer-img"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .wave-bg {
    background-color: var(--background-secondary);
  }

  .title-with-breaks {
    white-space: pre-line;
  }

  .fer-img {
    width: 100%;
    max-width: 330px;
    margin-left: 145px;
    margin-right: 0px;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 12px 12px 0px 0px #000000;
  }
</style>